<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">#500000</item>
        <item name="colorPrimary">#800000</item>

        <item name="colorAccent">@color/app_color_5</item>
        <item name="colorControlActivated">@color/app_color_4</item>
        <item name="colorControlNormal">@color/red_dark</item>
        <item name="colorControlHighlight">@color/red_light</item>

    </style>

    <style parent="android:Widget.SeekBar" name="SeekBarDanTheme">

        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>

    </style>



    <style name="CustomDialogTheme" parent="@android:style/Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>        "
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>

    </style>


</resources>
